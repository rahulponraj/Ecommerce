<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin-add-product</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/admin-add-product.css">

</head>
<body>
    <div class="admin-panel">
        <div class="sidebar">
            <div class="sidebar-header">
                <a class="admin-logo" href="/admin">Admin Panel</a>
            </div>
            <ul class="sidebar-menu">
                <li class="menu-item ">
                    <a href="/admin/dashboard">Dashboard</a>
                </li>
                <li class="menu-item active">
                    <a href="/admin/listProducts">Products</a>
                </li>
                <li class="menu-item">
                    <a href="/admin/categories">Categories</a>
                </li>
                <li class="menu-item">
                    <a href="/admin/orders">Orders</a>
                </li>
                <li class="menu-item">
                    <a href="/admin/coupons">Coupons</a>
                </li>
                <li class="menu-item">
                    <a href="/admin/listUsers">Customers</a>
                </li>
                <li class="menu-item">
                    <a href="/admin/banners">Banners</a>
                </li>
            </ul>
        </div>
        <div class="content">
            <div id="product-popup">
                <div id="product-form">
                    <form class="product-form" id="product-form-v" method="post" action="/admin/addProduct" enctype="multipart/form-data">
                        
                        <h3>Add Product</h3>
                        <div class="row">
                          <div class="col-lg-7">
                            <div class="product-label">Image</div>
                        <div class="product-input">
                          <div id="image-upload">
                            <div class="upload-preview"></div>
                            <div class="upload-preview"></div>
                            <div class="upload-preview"></div>
                            <div class="upload-preview"></div>
                            <input id="image" type="file" name="images" multiple>
                            <small class="text-muted">You can select up to four images.</small>
                          </div>
                        </div>
                          </div>
                          <div class="col-lg-5">
                            <div class="product-label">Title</div>
                            <div class="product-input">
                                <input id="title" type="text" name="title" placeholder="Title">
                                <div id="title-error" class="error-message"></div>
                            </div>
                        </div>
                          
                        </div>
                                          
                       

                        <div class="row">
                          <div class="col-lg-6">
                            <div class="product-label">Description</div>
                            <div class="product-input">
                                <textarea id="description" name="description" placeholder="Description"></textarea>
                                <div id="description-error" class="error-message"></div>
                            </div>
                        </div>
                          <div class="col-lg-6">
                            <div class="product-label">Categories</div>
                            <div class="product-input">
                              <select id="category" name="category">
                                <% if (typeof category !== 'undefined') { %>
                                  <% for (let i = 0; i < category.length; i++) { %>
                                    <option value="<%= category[i]._id %>" <%= category[i].category ? 'selected' : '' %>><%= category[i].category %></option>
                                  <% } %>
                                <% } %>
                              </select>
                              
                            </div>
                          </div>
                          
                        </div>
                        <div class="row">
                          <div class="col-lg-3">
                            <div class="product-label">Price</div>
                            <div class="product-input">
                                <input id="price" type="text" name="price" placeholder="Price">
                                <div id="price-error" class="error-message"></div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                          <div class="product-label">Sales Price</div>
                          <div class="product-input">
                              <input id="saleprice" type="text" name="saleprice" placeholder="Sales Price">
                              <div id="saleprice-error" class="error-message"></div>
                          </div>
                      </div>
                          <div class="col">
                            <div class="product-label">Size</div>
                            <div class="product-input">
                              <select id="size" name="size">
                                <option value="S" <%=  'S' ? 'selected' : '' %>>S</option>
                                <option value="M" <%=  'M' ? 'selected' : '' %>>M</option>
                                <option value="L" <%=  'L' ? 'selected' : '' %>>L</option>
                                <option value="XL" <%=  'XL' ? 'selected' : '' %>>XL</option>
                              </select>
                            </div>
                          </div>
                          <div class="col-lg-3">
                            <div class="product-label">For</div>
                            <div class="product-input">
                              <select id="for" name="For">
                                <option value="Men">Men</option>
                                <option value="Women">Women</option>
                                <option value="Kids">Kids</option>
                                <option value="Unisex">Unisex</option>
                              </select>
                            </div>
                          </div>
                          
                        </div>
                        <div class="row">
                          
                          <div class="col-lg-3">
                            <div class="product-label">Color</div>
                            <div class="product-input">
                              <select id="color" name="color">
                                <option value="Black">Black</option>
                                <option value="Brown">Brown</option>
                                <option value="Red">Red</option>
                              </select>
                            </div>
                          </div>
                       
                        
                        
                          <div class="col-lg-3">
                            <div class="product-label">Stock</div>
                            <div class="product-input">
                              <input id="stock" type="text" name="stock" placeholder="Stock">
                            </div>
                          </div>
                          <div class="col-lg-3">
                            <div class="product-label">Brand</div>
                            <div class="product-input">
                              <select class="select-brand" id="brand" name="brand" >
                                <option value="Levis">Levis</option>
                                <option value="H&M">H&M</option>
                                <option value="Zara">Zara</option>
                              </select>
                            </div>
                          </div>
                          
                        </div>
                        
                        
                        <div class="product-label"></div>
                        <div class="product-input"><button class="save-product" type="submit">Save Product</button></div>
                       
                    </form>
                </div>
            </div>
        </div>
    </div>
   
<script src="/javascript/add-product.js"></script>
<script src="/javascript/addProduct-validation.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
   
</body>
</html>
